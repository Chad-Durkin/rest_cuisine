@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <a href="/cuisine/form">Add a Cuisine</a>
        <a href="/restaurant/form">Add a Restaurant</a>
    </div>
    <div class="col-md-6">
        @if(@Model.Count() == 0)
        {
            <h2>No Cuisines have been added</h2>
        }
        else
        {
            <h1>Cuisines</h1>
            @foreach(var cuisine in Model)
            {
                <li><h2><a href="/cuisine/@cuisine.GetId()">@cuisine.GetName()</a><h2></li>
                <li>Restaurants: cuisine.GetRestaurants().Count</li>
            }
        }
    </div>
</div>
