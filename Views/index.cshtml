@{
    Layout = "Shared/_Layout.cshtml";
}

@if(@Model.Count == 0)
{
    <h2>No Cuisines have been added</h2>
}
else
{
    <h1>Cuisines</h1>
    @foreach(var cuisine in Model)
    {
        <h2><a href="/cuisine/@cuisine.GetId()">@cuisine.GetName()</a></h2>
        <h3>Restaurants: @cuisine.GetRestaurants().Count</h3>
        <div class="edit-button-holder">
            <form class="form-group" action="/delete/cuisine/@cuisine.GetId()" method="post">
                <button type="submit" name="button">Delete</button>
            </form>
        </div>
    }
}
